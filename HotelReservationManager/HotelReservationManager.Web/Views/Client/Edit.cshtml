@model HotelReservationManager.ViewModels.ClientViewModels.ClientViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="container">

    <h1 class="mt-4 mb-3">Edit Client</h1>

    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-controller="Home" asp-action="Index">My Hotel</a>
        </li>
        <li class="breadcrumb-item active">Clients</li>
        <li class="breadcrumb-item active">Edit</li>
    </ol>

    <form class="mx-auto half-width" method="post" asp-controller="Client" asp-action="Edit">
        <div class="form-group">
            <label asp-for="FirstName">First Name</label>
            <input asp-for="FirstName" class="form-control" value="@Model.FirstName">
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ThirdName">Third Name</label>
            <input asp-for="ThirdName" class="form-control" value="@Model.ThirdName">
            <span asp-validation-for="ThirdName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber">Phone Number</label>
            <input asp-for="PhoneNumber" class="form-control" value="@Model.PhoneNumber">
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" class="form-control" value="@Model.Email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="IsAdult">IsAdult</label>
            <input type="text" asp-for="IsAdult" class="form-control" value="@Model.IsAdult">
            <span asp-validation-for="IsAdult" class="text-danger"></span>
        </div>
        <hr>
        <div class="button-holder mt-2 d-flex w-25 mx-auto justify-content-between">
            <button type="submit" class="btn btn-primary">Back</button>
            <button type="submit" class="btn btn-primary">Edit</button>
        </div>
        <hr>
    </form>
</div>