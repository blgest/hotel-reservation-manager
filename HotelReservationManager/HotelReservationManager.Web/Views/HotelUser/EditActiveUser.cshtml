@model HotelReservationManager.ViewModels.UserViewModels.UserViewModel

@{
    ViewData["Title"] = "EditActiveUser";
}

<div class="container">

    <h1 class="mt-4 mb-3">Edit Active User</h1>

    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-controller="Home" asp-action="Index">My Hotel</a>
        </li>
        <li class="breadcrumb-item active">Users</li>
        <li class="breadcrumb-item active">Active</li>
        <li class="breadcrumb-item active">Edit</li>
    </ol>

    <form class="mx-auto half-width" method="post" asp-controller="HotelUser" asp-action="EditActiveUser">
        <div class="form-group">
            <label asp-for="Username">Username</label>
            <input asp-for="Username" class="form-control" value="@Model.Username">
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="FirstName">First Name</label>
            <input asp-for="FirstName" class="form-control" value="@Model.FirstName">
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SecondName">Second Name</label>
            <input asp-for="SecondName" class="form-control" value="@Model.SecondName">
            <span asp-validation-for="SecondName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ThirdName">Third Name</label>
            <input asp-for="ThirdName" class="form-control" value="@Model.ThirdName">
            <span asp-validation-for="ThirdName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="UCN">UCN</label>
            <input asp-for="UCN" class="form-control" value="@Model.UCN">
            <span asp-validation-for="UCN" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber">Phone Number</label>
            <input asp-for="PhoneNumber" class="form-control" value="@Model.PhoneNumber">
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" class="form-control" value="@Model.Email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="StartDate">Start Date</label>
            <input type="datetime" asp-for="StartDate" class="form-control" value="@Model.StartDate">
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
        <hr>
        <div class="button-holder mt-2 d-flex w-25 mx-auto justify-content-between">
            <button type="submit" class="btn btn-primary">Back</button>
            <button type="submit" class="btn btn-primary">Edit</button>
        </div>
        <hr>
    </form>
</div>