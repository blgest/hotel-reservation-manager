@model HotelReservationManager.ViewModels.ReservationViewModels.ReservationDetailsViewModel

<div class="container">
    <h1 class="mt-4 mb-3">Reservation Details</h1>

    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-controller="Home" asp-action="Index">My Hotel</a>
        </li>
        <li class="breadcrumb-item active">Reservation</li>
        <li class="breadcrumb-item active">Details</li>
    </ol>
    <form class="mx-auto half-width">



        <div class="form-group">
            <label>Adults</label>
            @if (Model.Adults.Count == 0)
            {
                <input id="adults" class="form-control" readonly="readonly">
            }
            else
            {
                @foreach (var adult in Model.Adults)
                {
                    <input id="adults" class="form-control" value="@adult.FirstName @adult.LastName @adult.PhoneNumber @adult.Email" readonly="readonly">
                    <p></p>
                }
            }
        </div>

        <div class="form-group">
            <label>Childrens</label>
            @if (Model.Childrens.Count == 0)
            {
                <input id="adults" class="form-control" readonly="readonly">
            }
            else
            {
                @foreach (var children in Model.Childrens)
                {
                    <input id="adults" class="form-control" value="@children.FirstName @children.LastName @children.PhoneNumber @children.Email" readonly="readonly">
                    <p></p>
                }
            }
        </div>

        <div class="form-group">
            <label>Start Date:</label>
            <input asp-for="StartDate" type="date" class="form-control" readonly="readonly">
        </div>

        <div class="form-group">
            <label>End Date:</label>
            <input asp-for="EndDate" type="date" class="form-control" readonly="readonly">
        </div>

        <div class="form-group">
            <label>Breakfast:</label>
            <input asp-for="Breakfast" type="text" class="form-control" readonly="readonly">
        </div>

        <div class="form-group">
            <label asp-for="AllInclusive">All Inclusive:</label>
            <input asp-for="AllInclusive" type="text" class="form-control" readonly="readonly">
        </div>

        <div class="form-group">
            <label>Room:</label>
            <input asp-for="Room" type="text" value="@Model.Room.Type @Model.Room.Number" class="form-control" readonly="readonly">

            <label>Price On Bed For Adult Per Day:</label>
            <input asp-for="Room" type="text" value="@Model.Room.PriceOnBedAdult lv" class="form-control" readonly="readonly">

            <label asp-for="Room">Price On Bed For Children Per Day:</label>
            <input asp-for="Room" type="text" value="@Model.Room.PriceOnBedChildren lv" class="form-control" readonly="readonly">
        </div>

        <div class="form-group">
            <label>Price:</label>
            <input asp-for="Price" value="@Model.Price" class="form-control" readonly="readonly">
        </div>

        <hr style="height:2px; width:100%; border-width:0; color:black; background-color:black" />
        <div class="button-holder mt-2 d-flex w-25 mx-auto justify-content-between">
            <a class="btn btn-primary" asp-controller="Reservation" asp-action="List">Back</a>
            <a class="btn btn-primary" asp-controller="Reservation" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
        </div>
        <hr style="height:2px; width:100%; border-width:0; color:black; background-color:black" />
    </form>
</div>


