@model HotelReservationManager.ViewModels.RoomViewModels.RoomsListViewModel

    <div class="container">

        <h1 class="mt-4 mb-3">Rooms</h1>

        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="Home" asp-action="Index">My Hotel</a>
            </li>
            <li class="breadcrumb-item active">Rooms</li>
        </ol>

        @foreach (var room in Model.Rooms)
        {
            <div class="card mb-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <h2 class="card-title">Room Number: @room.Number</h2>
                            <p>Type: @room.Type</p>
                            <p>Capacity: @room.Capacity</p>
                            <p>Is Free: @room.IsFree</p>
                            <p>Price On Bed For Adult: @room.PriceOnBedForAdult</p>
                            <p>Price On Bed For Children: @room.PriceOnBedForChildren</p>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-muted">
                    <a class="btn btn-primary" asp-controller="Room" asp-action="Edit" asp-route-id="@room.Id">Edit</a>
                    <a class="btn btn-primary" asp-controller="Room" asp-action="Delete" asp-route-id="@room.Id">Delete</a>
                </div>
            </div>
        }


        <ul class="pagination justify-content-center">
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">1</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">2</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">3</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        </ul>

    </div>